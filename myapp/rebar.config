{erl_opts, [debug_info]}.

{deps, []}.

{shell,
 % {config, "config/sys.config"},
 [{apps, [myapp]}]}.

{dist_node, [{setcookie, myapp}, {sname, 'myapp-node'}]}.

{plugins, [rebar3_format]}.

{format,
 [{files, ["rebar.config", "src/**/*.?rl", "test/**/*.?rl"]},
  {formatter, default_formatter},
  {options,
   #{paper => 110,
     ribbon => 100,
     break_indent => 2}},
  {ignore, []}]}.
